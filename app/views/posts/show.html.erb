<h1>Show post</h1>
<div>

  <p>
    <h3>Title:</h3>
    <%= @post.title %>
    </p>

  <p>
    <h5>Created at:
    <%= @post.created_at %></h5>

    <h3>Description</h3>
    <%= @post.description %>
  </p>
  </p>
    <%= link_to 'Edit', edit_post_path(@post) %>
    <%= link_to 'Delete', post_path(@post), method: :delete, data: { confirm: "Are you sure ?" } %>
  <p>
</div>
