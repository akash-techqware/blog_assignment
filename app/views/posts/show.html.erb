<h1>Show post</h1>
<div>

  <p>
    <h3>Title:</h3>
    <%= @post.title %>
    </p>

  <p>
    <h5>Created at:
    <%= @post.created_at %></h5>

    <h3>Description</h3>
    <%= @post.description %>
  </p>
  </p>
  <% if user_signed_in? %>
    <%= link_to 'Edit', edit_post_path(@post) %>
    <%= link_to 'Delete', post_path(@post), method: :delete, data: { confirm: "Are you sure ?" } %>
    <% end %>
  <p>
    <h2><%= @post.comments.count %> Comments</h2>
    <%= render @post.comments %>

    <h3>Add comment:</h3>
    <%= render "comments/form" %>
</div>
